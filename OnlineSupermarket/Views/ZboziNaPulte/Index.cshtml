@model IEnumerable<OnlineSupermarket.Models.ZboziNaPulte>

@{
    ViewData["Title"] = "Список товаров на полке";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить товар на полку</a>
</p>

<!-- Добавляем скрытое поле с Anti-Forgery Token для AJAX-запросов -->
@Html.AntiForgeryToken()

<table class="table table-striped">
    <thead>
        <tr>
            <th>Количество</th>
            <th>ID Товара</th>
            <th>ID Пульта</th>
            <th>Дата создания</th>
            <th>Дата обновления</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Pocet</td>
                <td>@item.ZboziIdZbozi</td>
                <td>@item.PultIdPultu</td>
                <td>@item.DatumVytvoreni.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.DatumAktualizace.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-zboziId="@item.ZboziIdZbozi" asp-route-pultId="@item.PultIdPultu" class="btn btn-sm btn-warning">Изменить</a>
                    <button class="btn btn-sm btn-danger" onclick="deleteZboziNaPulte(@item.ZboziIdZbozi, @item.PultIdPultu)">Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        // Функция для получения Anti-Forgery Token из скрытого поля
        function getAntiForgeryToken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }

        function deleteZboziNaPulte(zboziId, pultId) {
            if (confirm("Вы уверены, что хотите удалить этот товар с полки?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "ZboziNaPulte")',
                    type: 'POST',
                    data: { zboziId: zboziId, pultId: pultId },
                    headers: {
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    success: function (response) {
                        if (response.success) {
                            // Перезагрузить страницу после успешного удаления
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Произошла ошибка при удалении товара с полки.");
                    }
                });
            }
        }
    </script>
}


