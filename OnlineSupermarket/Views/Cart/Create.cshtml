@model OnlineSupermarket.Models.Platba

@{
	ViewData["Title"] = "Добавить платеж";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
	<div class="col-md-6">
		<form asp-action="Create" method="post">
			<div class="form-group">
				<label asp-for="Typ" class="control-label"></label>
				<input asp-for="Typ" class="form-control" />
				<span asp-validation-for="Typ" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProdejnaIdProdejny" class="control-label"></label>
				<input asp-for="ProdejnaIdProdejny" class="form-control" />
				<span asp-validation-for="ProdejnaIdProdejny" class="text-danger"></span>
			</div>
			<input type="hidden" asp-for="CelkovaCena" />
			<input type="hidden" asp-for="ZboziIdZbozi" />
			<div class="form-group">
				<input type="submit" value="Добавить" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}