@using System.Security.Claims

@model IEnumerable<OnlineSupermarket.Models.ZboziKategorieViewModel>

@{
    ViewData["Title"] = "Главная страница администратора";
    var username = ViewBag.Username as string;
    var role = ViewBag.Role as string;
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

<style>
    body {
        background-color: #1e3a5f; /* Темно-голубой фон */
        color: white; /* Белый текст */
    }

    .container {
        background-color: #2c5d8a; /* Синий фон контейнера */
        padding: 20px;
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff; /* Синий цвет кнопки */
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d; /* Серый цвет кнопки */
        border-color: #6c757d;
    }

    a {
        color: white; /* Белый цвет ссылок */
    }

    footer {
        text-align: center;
        margin-top: 20px;
        color: white; /* Белый текст для футера */
    }
</style>

<div class="container">
    <h1>Добро пожаловать в OnlineSupermarket</h1>
    @if (!string.IsNullOrEmpty(username) && role == "Administrator")
    {
        <h2>Ahoj administratore, @username!</h2>
        <div class="mt-3">
            <a href="@Url.Action("AdminPanel", "Home")" class="btn btn-primary">AdminPanel</a>
            <a href="@Url.Action("AdminIndex", "Home")" class="btn btn-primary">Hlavni stranka admina</a>
            <a href='@Url.Action("Index", "RegisUzivatel")' class="btn btn-primary">Uzivatele</a>
            <a href='@Url.Action("AdminHost", "Home")' class="btn btn-primary">Host</a>
            <a href="@Url.Action("Index", "Cart")" class="btn btn-primary">Перейти в корзину</a>
        </div>
    }
    else
    {
        <h2>У вас нет доступа к этой странице.</h2>
    }

    @await Html.PartialAsync("_ZboziKategoriePartial", Model)

    <div class="text-center mt-4">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
</div>

<footer>
    <p>© 2024 - OnlineSupermarket</p>
</footer>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}

