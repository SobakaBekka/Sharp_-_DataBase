@{
    ViewData["Title"] = "Domovská stránka";
}

<!-- Удалены теги <!DOCTYPE html>, <html>, <head>, <body>, так как предполагается использование макета -->

<style>
    /* Установка тёмно-синего фона и белого текста */
    body {
        background-color: #001f3f; /* Тёмно-синий фон */
        color: #ffffff; /* Белый текст для контраста */
        font-family: Arial, sans-serif;
    }
    /* Стилизация навбара */
    .navbar {
        background-color: #001f3f; /* Соответствующий фон для навбара */
    }

    .nav-link, .navbar-brand {
        color: #ffffff !important; /* Белый текст в навбаре */
        transition: color 0.3s;
    }

    .nav-link:hover, .navbar-brand:hover {
        color: #ffdd57 !important; /* Желтый оттенок при наведении */
    }
    /* Стилизация кнопок регистрации и авторизации */
    .btn-register, .btn-login {
        margin-left: 10px;
        border-color: #ffffff;
        color: #ffffff;
        transition: background-color 0.3s, color 0.3s;
    }

    .btn-register:hover, .btn-login:hover {
        background-color: #ffdd57;
        color: #001f3f;
        border-color: #ffdd57;
    }
    /* Стилизация карточек продуктов */
    .card {
        background-color: #003366; /* Немного светлее тёмно-синий для карточек */
        border: none;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: scale(1.05); /* Анимация увеличения при наведении */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .card-title, .card-text, .text-muted {
        color: #ffffff; /* Белый текст в карточках */
    }
    /* Стилизация кнопок "Купить" */
    .btn-primary {
        background-color: #005cbf;
        border-color: #0056b3;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #004a99;
        border-color: #003366;
    }
    /* Стилизация футера */
    footer {
        background-color: #001f3f; /* Соответствующий фон для футера */
        color: #ffffff; /* Белый текст в футере */
        transition: background-color 0.3s, color 0.3s;
    }

    footer a {
        color: #ffdd57;
        transition: color 0.3s;
    }

    footer a:hover {
        color: #ffffff;
        text-decoration: underline;
    }
    /* Добавление анимации появления секций */
    .fade-in {
        animation: fadeIn 2s ease-in-out;
    }
    /* Анимация появления */
     fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<header class="py-4">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">Supermarket "Váš Obchod"</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Přepnout navigaci">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Domů <span class="sr-only">(aktuální)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-shopping-cart"></i> Cart</a> <!-- Добавлена ссылка "Cart" -->
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-light btn-register" asp-controller="RegisUzivatel" asp-action="Create">Registrace</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-light btn-login" href="/Login">Přihlášení</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<main role="main" class="container mt-4">
    <!-- Sekce s populárními produkty -->
    <section id="featured-products" class="mt-5 fade-in">
        <h2 class="mb-4 text-center">Populární produkty</h2>
        <div class="row">
            <!-- Добавляем 3 первых продукта -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="~/images/product1.jpg" class="card-img-top" alt="Товар 1">
                    <div class="card-body">
                        <h5 class="card-title">Товар 1</h5>
                        <p class="card-text">Описание товара 1.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Цена: 100 Kč</span>
                            <a href="#" class="btn btn-primary">Купить</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="~/images/product2.jpg" class="card-img-top" alt="Товар 2">
                    <div class="card-body">
                        <h5 class="card-title">Товар 2</h5>
                        <p class="card-text">Описание товара 2.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Цена: 200 Kč</span>
                            <a href="#" class="btn btn-primary">Купить</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="~/images/product3.jpg" class="card-img-top" alt="Товар 3">
                    <div class="card-body">
                        <h5 class="card-title">Товар 3</h5>
                        <p class="card-text">Описание товара 3.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Цена: 150 Kč</span>
                            <a href="#" class="btn btn-primary">Купить</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Продукты 4-21 -->
            @for (int i = 4; i <= 21; i++)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="@Url.Content($"~/images/product{i}.jpg")" class="card-img-top" alt="Товар @i">
                        <div class="card-body">
                            <h5 class="card-title">Товар @i</h5>
                            <p class="card-text">Описание товара @i.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Цена: @(i * 10) Kč</span>
                                <a href="#" class="btn btn-primary">Купить</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Sekce o obchodě -->
    <section id="about" class="mt-5 fade-in">
        <h2 class="mb-4 text-center">O nás</h2>
        <p class="text-center">Vítejte v supermarketu "Váš Obchod"! Nabízíme široký sortiment vysoce kvalitních produktů za dostupné ceny. Naší prioritou je čerstvost, rozmanitost a vynikající služby pro naše zákazníky.</p>
    </section>
</main>

