@model IEnumerable<OnlineSupermarket.Models.ZboziKategorieViewModel>

@{
	ViewData["Title"] = "Главная страница";
	var username = ViewBag.Username as string;
	var role = ViewBag.Role as string;
}

<style>
    body {
        background-color: #1e3a5f; /* Темно-голубой фон */
        color: white; /* Белый текст */
    }

    .container {
        background-color: #2c5d8a; /* Синий фон контейнера */
        padding: 20px;
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff; /* Синий цвет кнопки */
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d; /* Серый цвет кнопки */
        border-color: #6c757d;
    }

    a {
        color: white; /* Белый цвет ссылок */
    }

    footer {
        text-align: center;
        margin-top: 20px;
        color: white; /* Белый текст для футера */
    }
</style>

<div class="container">
	<h1>Добро пожаловать в OnlineSupermarket</h1>
	@if (!string.IsNullOrEmpty(username))
	{
		<h2>Привет, @username!</h2>
		@if (role == "Administrator")
		{
			<div class="mt-3">
				<a href="@Url.Action("AdminIndex", "Home")" class="btn btn-primary">Главная страница администратора</a>
			</div>
		}
	}
	else
	{
		<h2>Привет, гость!</h2>
		<div class="mt-3">
			<a href="@Url.Action("Registrace", "Home")" class="btn btn-primary">Регистрация</a>
			<a href="@Url.Action("Autorizace", "Home")" class="btn btn-secondary">Авторизация</a>
		</div>
	}

	@await Html.PartialAsync("_ZboziKategoriePartial", Model)

	<div class="text-center mt-4">
		<h1 class="display-4">Welcome</h1>
		<p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
	</div>
</div>

<footer>
	<p>© 2024 - OnlineSupermarket</p>
</footer>