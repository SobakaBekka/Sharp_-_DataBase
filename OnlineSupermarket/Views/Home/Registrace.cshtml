@model OnlineSupermarket.Models.RegisUzivatel

@{
    ViewData["Title"] = "Registrace uživatele";
}

<h1>@ViewData["Title"]</h1>

<!-- Blok pro zobrazení validačních chyb -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        <h4>Chyby validace:</h4>
        <ul>
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@modelError.ErrorMessage</li>
            }
        </ul>
    </div>
}

<!-- Dočasný blok pro zobrazení přijatých dat (debugging) -->
@if (Model != null)
{
    <div class="alert alert-info mt-4">
        <h4>Debugování přijatých dat:</h4>

        @if (!string.IsNullOrEmpty(Model.Username))
        {
            <p><strong>Uživatelské jméno (Username):</strong> @Model.Username</p>
        }
        else
        {
            <p><strong>Uživatelské jméno (Username):</strong> <span class="text-danger">Nezadáno</span></p>
        }

        @if (!string.IsNullOrEmpty(Model.Email))
        {
            <p><strong>Email:</strong> @Model.Email</p>
        }
        else
        {
            <p><strong>Email:</strong> <span class="text-danger">Nezadáno</span></p>
        }

        @if (!string.IsNullOrEmpty(Model.Jmeno))
        {
            <p><strong>Jméno:</strong> @Model.Jmeno</p>
        }
        else
        {
            <p><strong>Jméno:</strong> <span class="text-danger">Nezadáno</span></p>
        }

        @if (!string.IsNullOrEmpty(Model.Prijmeni))
        {
            <p><strong>Příjmení:</strong> @Model.Prijmeni</p>
        }
        else
        {
            <p><strong>Příjmení:</strong> <span class="text-danger">Nezadáno</span></p>
        }

        @if (!string.IsNullOrEmpty(Model.Heslo))
        {
            <p><strong>Heslo:</strong> [Šifrováno]</p> <!-- Heslo se nezobrazuje pro bezpečnost -->
        }
        else
        {
            <p><strong>Heslo:</strong> <span class="text-danger">Nezadáno</span></p>
        }

        @if (!string.IsNullOrEmpty(Model.Rolenazev))
        {
            <p><strong>Role:</strong> @Model.Rolenazev</p>
        }
        else
        {
            <p><strong>Role:</strong> <span class="text-danger">Nezadáno</span></p>
        }

        @if (Model.RoleIdRole != null)
        {
            <p><strong>ID Role:</strong> @Model.RoleIdRole</p>
        }
        else
        {
            <p><strong>ID Role:</strong> <span class="text-danger">Nezadáno</span></p>
        }

        <p><strong>Datum vytvoření:</strong> @Model.DatumVytvoreni.ToString("g")</p>
        <p><strong>Datum aktualizace:</strong> @Model.DatumAktualizace.ToString("g")</p>
    </div>
}

<form asp-action="Registrace" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Username" class="control-label">Uživatelské jméno</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Jmeno" class="control-label">Jméno</label>
        <input asp-for="Jmeno" class="form-control" />
        <span asp-validation-for="Jmeno" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prijmeni" class="control-label">Příjmení</label>
        <input asp-for="Prijmeni" class="form-control" />
        <span asp-validation-for="Prijmeni" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Heslo" class="control-label">Heslo</label>
        <input asp-for="Heslo" type="password" class="form-control" />
        <span asp-validation-for="Heslo" class="text-danger"></span>
    </div>

    <!-- Skryté pole pro Rolenazev -->
    <input asp-for="Rolenazev" type="hidden" value="Regis" />

    <div class="form-group mt-3">
        <input type="submit" value="Registrovat" class="btn btn-primary" />
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Zpět</a>
    </div>
</form>

<!-- Dočasný blok pro zobrazení zpráv o chybách nebo úspěchu -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-4">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-4">
        @TempData["ErrorMessage"]
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
