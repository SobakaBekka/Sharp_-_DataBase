@model OnlineSupermarket.Models.RegisUzivatel

@{
    ViewData["Title"] = "User Profile";
}

<h2>User Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="UserProfile" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdRegisUzivatelu" />
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Jmeno" class="control-label"></label>
        <input asp-for="Jmeno" class="form-control" />
        <span asp-validation-for="Jmeno" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prijmeni" class="control-label"></label>
        <input asp-for="Prijmeni" class="form-control" />
        <span asp-validation-for="Prijmeni" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Heslo" class="control-label"></label>
        <input asp-for="Heslo" class="form-control" type="password" />
        <span asp-validation-for="Heslo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}