@model OnlineSupermarket.Models.Autorizace

@{
    ViewData["Title"] = "Autorizace uživatele";
}

<h1>@ViewData["Title"]</h1>

<!-- Blok pro zobrazení zpráv o úspěšné registraci -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Blok pro zobrazení chyb validace -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        <h4>Chyby validace:</h4>
        <ul>
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@modelError.ErrorMessage</li>
            }
        </ul>
    </div>
}

<!-- Dočasný blok pro zobrazení přijatých dat (ladění) -->
@if (Model != null)
{
    <div class="alert alert-info mt-4">
        <h4>Ladění přijatých dat:</h4>

        @if (!string.IsNullOrEmpty(Model.Username))
        {
            <p><strong>Uživatelské jméno (Username):</strong> @Model.Username</p>
        }
        else
        {
            <p><strong>Uživatelské jméno (Username):</strong> <span class="text-danger">Nezadáno</span></p>
        }

        @if (!string.IsNullOrEmpty(Model.Heslo))
        {
            <p><strong>Heslo (Heslo):</strong> [Šifrováno]</p> <!-- Nezobrazujeme heslo v čitelné podobě, pro bezpečnost -->
        }
        else
        {
            <p><strong>Heslo (Heslo):</strong> <span class="text-danger">Nezadáno</span></p>
        }
    </div>
}

<form asp-action="Autorizace" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Username" class="control-label">Uživatelské jméno</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Heslo" class="control-label">Heslo</label>
        <input asp-for="Heslo" type="password" class="form-control" />
        <span asp-validation-for="Heslo" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Přihlásit se" class="btn btn-primary" />
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Zpět</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
