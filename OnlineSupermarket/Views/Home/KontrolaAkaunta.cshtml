@{
	ViewData["Title"] = "Kontrola účtu";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["AccountCheckMessage"] != null)
{
	<div class="alert alert-info">
		@TempData["AccountCheckMessage"]
	</div>
}

@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger">
		@TempData["ErrorMessage"]
	</div>
}

<form asp-action="KontrolaAkaunta" method="post">
	<div class="form-group">
		<label>Máte účet?</label>
		<div class="mt-3">
			<button type="submit" name="hasAccount" value="yes" class="btn btn-primary">Ano</button>
			<button type="submit" name="hasAccount" value="no" class="btn btn-secondary">Ne</button>
		</div>
	</div>
</form>