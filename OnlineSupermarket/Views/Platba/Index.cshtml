@model IEnumerable<OnlineSupermarket.Models.Platba>

@{
    ViewData["Title"] = "Seznam plateb";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Vytvořit platbu</a>
</p>

<!-- Přidání skrytého pole s Anti-Forgery Token pro AJAX požadavky -->
@Html.AntiForgeryToken()

<table class="table table-striped">
    <thead>
        <tr>
            <th>Číslo transakce</th>
            <th>Celková cena</th>
            <th>Typ</th>
            <th>Datum vytvoření</th>
            <th>Datum aktualizace</th>
            <th>ID zboží</th>
            <th>ID prodejny</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var platba in Model)
        {
            <tr>
                <td>@platba.IdTranzakce</td>
                <td>@platba.CelkovaCena</td>
                <td>@platba.Typ</td>
                <td>@platba.DatumVytvoreni.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@platba.DatumAktualizace.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@platba.ZboziIdZbozi</td>
                <td>@platba.ProdejnaIdProdejny</td>
                <td>
                    <a asp-action="Edit" asp-route-idtranzakce="@platba.IdTranzakce" class="btn btn-primary">Upravit</a>
                    <button class="btn btn-danger" onclick="deletePlatba(@platba.IdTranzakce)">Smazat</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        function getAntiForgeryToken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }

        function deletePlatba(idTranzakce) {
            if (confirm("Opravdu chcete smazat tuto platbu?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Platba")',
                    type: 'POST',
                    data: { idTranzakce: idTranzakce },
                    headers: {
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Došlo k chybě při mazání platby.");
                    }
                });
            }
        }
    </script>
}

