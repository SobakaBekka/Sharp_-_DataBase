@model OnlineSupermarket.Models.Platba

@{
	ViewData["Title"] = "Создать Новый Платеж";
}

<h2>@ViewData["Title"]</h2>

<h4>Platba</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" method="post">
			<div class="form-group">
				<label asp-for="CelkovaCena" class="control-label"></label>
				<input asp-for="CelkovaCena" class="form-control" />
				<span asp-validation-for="CelkovaCena" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Typ" class="control-label"></label>
				<input asp-for="Typ" class="form-control" />
				<span asp-validation-for="Typ" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ZboziIdZbozi" class="control-label"></label>
				<input asp-for="ZboziIdZbozi" class="form-control" />
				<span asp-validation-for="ZboziIdZbozi" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProdejnaIdProdejny" class="control-label"></label>
				<input asp-for="ProdejnaIdProdejny" class="form-control" />
				<span asp-validation-for="ProdejnaIdProdejny" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Сохранить" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}