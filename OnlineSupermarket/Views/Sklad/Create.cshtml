@model OnlineSupermarket.Models.Sklad

<h2>Create New Sklad</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NazevSkladu" class="control-label"></label>
        <input asp-for="NazevSkladu" class="form-control" />
        <span asp-validation-for="NazevSkladu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PocetPolicek" class="control-label"></label>
        <input asp-for="PocetPolicek" class="form-control" />
        <span asp-validation-for="PocetPolicek" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Plocha" class="control-label"></label>
        <input asp-for="Plocha" class="form-control" />
        <span asp-validation-for="Plocha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>