@model IEnumerable<OnlineSupermarket.Models.ProdaneZbozi>

@{
    ViewData["Title"] = "Список Проданных Товаров";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать Новый Проданный Товар</a>
</p>

<!-- Добавляем скрытое поле с Anti-Forgery Token для AJAX-запросов -->
@Html.AntiForgeryToken()

<table class="table table-striped">
    <thead>
        <tr>
            <th>Количество</th>
            <th>Цена Продажи</th>
            <th>ID Товара</th>
            <th>ID Транзакции</th>
            <th>Дата Создания</th>
            <th>Дата Обновления</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prodaneZbozi in Model)
        {
            <tr>
                <td>@prodaneZbozi.Pocet</td>
                <td>@prodaneZbozi.Prodejnicena.ToString("C")</td>
                <td>@prodaneZbozi.ZboziIdZbozi</td>
                <td>@prodaneZbozi.IdTranzakce</td>
                <td>@prodaneZbozi.DatumVytvoreni.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@prodaneZbozi.DatumAktualizace.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-zboziIdZbozi="@prodaneZbozi.ZboziIdZbozi" asp-route-idTranzakce="@prodaneZbozi.IdTranzakce" class="btn btn-sm btn-warning">Изменить</a>
                    <button class="btn btn-sm btn-danger" onclick="deleteProdaneZbozi(@prodaneZbozi.ZboziIdZbozi, @prodaneZbozi.IdTranzakce)">Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        // Функция для получения Anti-Forgery Token из скрытого поля
        function getAntiForgeryToken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }

        function deleteProdaneZbozi(zboziIdZbozi, idTranzakce) {
            if (confirm("Вы уверены, что хотите удалить этот проданный товар?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "ProdaneZbozi")',
                    type: 'POST',
                    data: { zboziIdZbozi: zboziIdZbozi, idTranzakce: idTranzakce },
                    headers: {
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    success: function (response) {
                        if (response.success) {
                            // Перезагрузить страницу после успешного удаления
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Произошла ошибка при удалении проданного товара.");
                    }
                });
            }
        }
    </script>
}
