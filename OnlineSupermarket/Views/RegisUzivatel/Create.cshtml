@model OnlineSupermarket.Models.RegisUzivatel

@{
    ViewData["Title"] = "Создать Нового Пользователя";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Username" class="control-label">Имя пользователя</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Электронная почта</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Jmeno" class="control-label">Имя</label>
        <input asp-for="Jmeno" class="form-control" />
        <span asp-validation-for="Jmeno" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prijmeni" class="control-label">Фамилия</label>
        <input asp-for="Prijmeni" class="form-control" />
        <span asp-validation-for="Prijmeni" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Heslo" class="control-label">Пароль</label>
        <input asp-for="Heslo" class="form-control" />
        <span asp-validation-for="Heslo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleIdRole" class="control-label">ID Роли</label>
        <input asp-for="RoleIdRole" class="form-control" />
        <span asp-validation-for="RoleIdRole" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rolenazev" class="control-label">Название Роли</label>
        <select asp-for="Rolenazev" class="form-control" asp-items="ViewBag.Roles"></select>
        <span asp-validation-for="Rolenazev" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Назад</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


