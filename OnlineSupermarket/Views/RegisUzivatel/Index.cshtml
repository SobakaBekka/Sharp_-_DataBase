@model IEnumerable<OnlineSupermarket.Models.RegisUzivatel>

@{
    ViewData["Title"] = "Seznam uživatelů";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href='@Url.Action("AdminIndex", "Home")' class="btn btn-secondary">Zpátky na stranku admin</a>
</p>

<p>
    <a asp-action="Create" class="btn btn-primary">Vytvořit nového uživatele</a>
</p>

<!-- Přidání skrytého pole s Anti-Forgery Token pro AJAX požadavky -->
@Html.AntiForgeryToken()

<table class="table table-striped">
    <thead>
        <tr>
            <th>Uživatelské jméno</th>
            <th>Email</th>
            <th>Jméno</th>
            <th>Příjmení</th>
            <th>Role</th>
            <th>Datum vytvoření</th>
            <th>Datum aktualizace</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uzivatel in Model)
        {
            <tr>
                <td>@uzivatel.Username</td>
                <td>@uzivatel.Email</td>
                <td>@uzivatel.Jmeno</td>
                <td>@uzivatel.Prijmeni</td>
                <td>@uzivatel.Rolenazev</td>
                <td>@uzivatel.DatumVytvoreni.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@uzivatel.DatumAktualizace.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@uzivatel.IdRegisUzivatelu" class="btn btn-sm btn-warning">Upravit</a>
                    <a asp-action="DetailyUzivatele" asp-route-id="@uzivatel.IdRegisUzivatelu" class="btn btn-sm btn-info">Zobrazit</a>
                    <button class="btn btn-sm btn-danger" onclick="deleteUzivatel(@uzivatel.IdRegisUzivatelu)">Smazat</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        // Funkce pro získání Anti-Forgery Token ze skrytého pole
        function getAntiForgeryToken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }

        function deleteUzivatel(idRegisUzivatelu) {
            if (confirm("Jste si jisti, že chcete tohoto uživatele smazat?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "RegisUzivatel")',
                    type: 'POST',
                    data: { id: idRegisUzivatelu },
                    headers: {
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    success: function (response) {
                        if (response.success) {
                            // Obnovit stránku po úspěšném smazání
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Došlo k chybě při mazání uživatele.");
                    }
                });
            }
        }
    </script>
}


