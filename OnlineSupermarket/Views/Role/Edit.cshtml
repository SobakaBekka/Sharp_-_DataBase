@model OnlineSupermarket.Models.Role

@{
	ViewData["Title"] = "Изменить роль";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="IdRole" />
	<div class="form-group">
		<label asp-for="Nazev" class="control-label">Название</label>
		<input asp-for="Nazev" class="form-control" />
		<span asp-validation-for="Nazev" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Popis" class="control-label">Описание</label>
		<input asp-for="Popis" class="form-control" />
		<span asp-validation-for="Popis" class="text-danger"></span>
	</div>
	<div class="form-group mt-3">
		<input type="submit" value="Сохранить" class="btn btn-primary" />
		<a href="@Url.Action("Index")" class="btn btn-secondary">Назад</a>
	</div>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}