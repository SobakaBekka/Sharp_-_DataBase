@model IEnumerable<OnlineSupermarket.Models.Role>

@{
    ViewData["Title"] = "Список ролей";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить роль</a>
</p>

<!-- Добавляем скрытое поле с Anti-Forgery Token для AJAX-запросов -->
@Html.AntiForgeryToken()

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID Роли</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Дата создания</th>
            <th>Дата обновления</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.IdRole</td>
                <td>@role.Nazev</td>
                <td>@role.Popis</td>
                <td>@role.DatumVytvoreni.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@role.DatumAktualizace.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-idRole="@role.IdRole" class="btn btn-sm btn-warning">Изменить</a>
                    <button class="btn btn-sm btn-danger" onclick="deleteRole(@role.IdRole)">Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        // Функция для получения Anti-Forgery Token из скрытого поля
        function getAntiForgeryToken() {
            return $('input[name="__RequestVerificationToken"]').val();
        }

        function deleteRole(idRole) {
            if (confirm("Вы уверены, что хотите удалить эту роль?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Role")',
                    type: 'POST',
                    data: { idRole: idRole },
                    headers: {
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    success: function (response) {
                        if (response.success) {
                            // Перезагрузить страницу после успешного удаления
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert("Произошла ошибка при удалении роли.");
                    }
                });
            }
        }
    </script>
}
