@model OnlineSupermarket.Models.Zamestanec

@{
    ViewData["Title"] = "Добавить сотрудника";
}

<h2>Добавить сотрудника</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Jmeno" class="control-label"></label>
        <input asp-for="Jmeno" class="form-control" />
        <span asp-validation-for="Jmeno" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prijmeni" class="control-label"></label>
        <input asp-for="Prijmeni" class="form-control" />
        <span asp-validation-for="Prijmeni" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RodneCislo" class="control-label"></label>
        <input asp-for="RodneCislo" class="form-control" />
        <span asp-validation-for="RodneCislo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelefonniCislo" class="control-label"></label>
        <input asp-for="TelefonniCislo" class="form-control" />
        <span asp-validation-for="TelefonniCislo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PoziceIdPozice" class="control-label"></label>
        <input asp-for="PoziceIdPozice" class="form-control" />
        <span asp-validation-for="PoziceIdPozice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProdejnaIdProdejny" class="control-label"></label>
        <input asp-for="ProdejnaIdProdejny" class="form-control" />
        <span asp-validation-for="ProdejnaIdProdejny" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdNadrezene" class="control-label"></label>
        <input asp-for="IdNadrezene" class="form-control" />
        <span asp-validation-for="IdNadrezene" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
