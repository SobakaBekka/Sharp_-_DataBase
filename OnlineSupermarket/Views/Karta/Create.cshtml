@model OnlineSupermarket.Models.Karta

<h1>Новий запис в таблиці KARTA</h1>

<form asp-action="Create" method="post">
    <div>
        <label for="IdTranzakce">ID Tranzakce:</label>
        <input type="number" id="IdTranzakce" name="IdTranzakce" required />
    </div>
    <div>
        <label for="AutorizacniKod">Autorizační Kód:</label>
        <input type="number" id="AutorizacniKod" name="AutorizacniKod" required />
    </div>
    <div>
        <label for="Cislo">Číslo:</label>
        <input type="number" id="Cislo" name="Cislo" required />
    </div>
    <button type="submit">Зберегти</button>
</form>
