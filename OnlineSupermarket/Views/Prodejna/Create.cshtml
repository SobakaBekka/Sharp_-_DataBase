@model OnlineSupermarket.Models.Prodejna

@{
	ViewData["Title"] = "Добавить магазин";
}

<h2>Добавить магазин</h2>

<h4>Prodejna</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" method="post">
			<div class="form-group">
				<label asp-for="Kontaktnicislo" class="control-label"></label>
				<input asp-for="Kontaktnicislo" class="form-control" />
				<span asp-validation-for="Kontaktnicislo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Plocha" class="control-label"></label>
				<input asp-for="Plocha" class="form-control" />
				<span asp-validation-for="Plocha" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PokladnaIdPokladny" class="control-label"></label>
				<input asp-for="PokladnaIdPokladny" class="form-control" />
				<span asp-validation-for="PokladnaIdPokladny" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Сохранить" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}