@model IEnumerable<OnlineSupermarket.Models.Adresa>

@{
    ViewData["Title"] = "Seznam adres";
}

<h2>Seznam adres</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Přidat adresu</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdAdresy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ulice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Psc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdejnaIdProdejny)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZamestnanecIdZamestance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkladIdSkladu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row-@item.IdAdresy">
                <td>@Html.DisplayFor(modelItem => item.IdAdresy)</td>
                <td>@Html.DisplayFor(modelItem => item.Mesto)</td>
                <td>@Html.DisplayFor(modelItem => item.Ulice)</td>
                <td>@Html.DisplayFor(modelItem => item.Psc)</td>
                <td>@Html.DisplayFor(modelItem => item.ProdejnaIdProdejny)</td>
                <td>@Html.DisplayFor(modelItem => item.ZamestnanecIdZamestance)</td>
                <td>@Html.DisplayFor(modelItem => item.SkladIdSkladu)</td>
                <td>
                    <a asp-action="Edit" asp-route-idAdresy="@item.IdAdresy" class="btn btn-warning">Upravit</a>
                    <form asp-action="Delete" asp-route-idAdresy="@item.IdAdresy" method="post" class="delete-form" style="display:inline-block">
                        <button type="submit" class="btn btn-danger delete-button">Odstranit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.delete-form').submit(function(e) {
                e.preventDefault(); // Zabránit výchozímu chování odeslání formuláře

                if (confirm('Jste si jisti, že chcete odstranit tuto adresu?')) {
                    var form = $(this);
                    var actionUrl = form.attr('action');
                    var row = form.closest('tr');

                    $.ajax({
                        url: actionUrl,
                        type: 'POST',
                        data: form.serialize(),
                        success: function(response) {
                            if (response.success) {
                                row.remove(); // Odstranit řádek z tabulky bez obnovení stránky
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function() {
                            alert('Došlo k chybě při pokusu o odstranění adresy.');
                        }
                    });
                }
            });
        });
    </script>
}
